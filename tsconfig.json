{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build/dist",
    "paths": {
      "@": ["./"],
      "base/*": ["./src/base/*"],
      "common/*": ["./src/common/*"],
      "components/*": ["./src/components/*"],
      "store/*": ["./src/store/*"],
      "api/*": ["./src/api/*"]
    },
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "rootDir": "src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ]
}
